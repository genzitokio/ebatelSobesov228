{
  "name": "stealth-ai-assistant",
  "version": "1.0.0",
  "description": "Невидимый AI-ассистент для интервью",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "compile": "tsc",
    "compile-watch": "tsc --watch",
    "build": "npm run compile && electron-builder",
    "pack": "npm run compile && electron-builder --dir",
    "dist": "npm run compile && electron-builder --publish=never"
  },
  "keywords": [
    "electron",
    "ai",
    "assistant",
    "stealth",
    "interview"
  ],
  "author": "AI Assistant Developer",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3",
    "@types/node": "^20.10.0",
    "@types/ws": "^8.5.10"
  },
  "dependencies": {
    "ws": "^8.16.0",
    "robotjs": "^0.6.0"
  },
  "build": {
    "appId": "com.stealthai.assistant",
    "productName": "Stealth AI Assistant",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "src/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
